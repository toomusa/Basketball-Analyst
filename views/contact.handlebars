{{>header}}
<div class="container contact-form">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <div class="card">
                <div class="card-header">
                    <h4>Contact Us</h4>
                </div>
                <div class="card-body">

                    <form>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="fName">First Name</label>
                                <input type="text" class="form-control" id="fName" placeholder="First Name">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="lName">Last Name</label>
                                <input type="password" class="form-control" id="lName" placeholder="Last Name">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="email">Email</label>
                                <input type="password" class="form-control" id="email" placeholder="example@gmail.com">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Your comment</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>


                        <button type="submit" class="btn btn-outline-warning btn-md">Submit</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

{{>footer}}