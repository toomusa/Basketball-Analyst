{{>header}}
<div class="dashboard jumbotron mx-5 mt-5 py-3 px-3">
  <div class="card">
    <div class="contact-form card-body">
      <section class="mb-4">

        <!--Section heading-->
        <h2 class="h1-responsive font-weight-bold text-center my-4">Contact us</h2>
        <!--Section description-->
        <p id="contactbodyintro" class="text-center w-responsive mx-auto mb-5">Do you have any questions? Additional features you want? Message us here!
        </p>
        <div class="row">
          <div class="col-md-9 mb-md-0 mb-5">
            <form id="contact-form" name="contact-form" action="mail.php" method="POST">

              <div class="row">
                <div class="col-md-6">
                  <div class="md-form mb-0">
                    <label for="name" class="yourname">Your name</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Enter your name">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="md-form mb-0">
                    <label for="email" class="youremail">Your email</label>
                    <input type="text" id="email" name="email" class="form-control" placeholder="Enter your email">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="md-form mb-0">
                    <label for="subject" class="subject">Subject</label>
                    <input type="text" id="subject" name="subject" class="form-control">
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <div class="md-form">
                    <label class="yourmessage" for="message">Your message</label>
                    <textarea type="text" id="message" name="message" rows="2"
                      class="form-control md-textarea"></textarea>
                  </div>
                </div>
              </div>

            </form>

            <div class="text-center text-md-left">
              <a class="btn btn-outline-primary btn-md mt-3"
                onclick="document.getElementById('contact-form').submit();">Send</a>
            </div>
            <div class="status"></div>
          </div>

          <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
              <li><i class="fas fa-map-marker-alt fa-2x"></i>
                <p>San Francisco, CA 94126, USA</p>
              </li>

              <li><i class="fas fa-phone mt-4 fa-2x"></i>
                <p></p>
              </li>

              <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                <p>contact@basketballanalyst.com</p>
              </li>
            </ul>
          </div>

        </div>

      </section>
    </div>

  </div>
</div>
{{>footer}}